{
	"id": "com.mipow.playbulb",
	"version": "0.0.1",
	"compatibility": ">=0.11.0",
	"name": {
		"en": "Mipow Playbulb",
		"nl": "Mipow Playbulb"
	},
	"description": {
		"en": "",
		"nl": ""
	},
	"images": {
		"large": "assets/images/large.jpg",
		"small": "assets/images/small.jpg"
	},
	"author": {
		"name": "Athom B.V."
	},
	"drivers": [
		{
			"id": "playbulb",
			"name": {
				"en": "MiPow Playbulb",
				"nl": "MiPow Playbulb"
			},
			"class": "light",
			"capabilities": [
				"onoff",
				"dim",
				"light_hue",
				"light_saturation",
				"light_temperature",
				"light_mode"
			],
			"pair": [
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add_devices"
					}
				},
				{
					"id": "add_devices",
					"template": "add_devices"
				}
			]
		}
	],
	"flow": {
		"actions": [
			{
				"id": "flash",
				"title": {
					"en": "Flash the light",
					"nl": "Laat de lamp flitsen"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=playbulb"
					},
					{
						"name": "speed",
						"type": "range",
						"placeholder":{
							"en": "Speed",
							"nl": "Snelheid"
						},
						"min":"0",
						"max":"1",
						"step":"0.01",
						"label":"%",
						"labelMultiplier": 100,
						"labelDecimals": 0
					},
					{
						"name": "color",
						"type": "color"
					}
				]
			},
			{
				"id": "pulse",
				"title": {
					"en": "Pulse the light",
					"nl": "Pulseer de lamp"
				},
